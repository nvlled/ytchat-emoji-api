{
  "name": "ts-esbuild-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build-dev": "esbuild src/js/main.tsx src/css/main.css --bundle --outdir=dist/ --minify --sourcemap",
    "dev": "esbuild src/js/main.tsx src/css/main.css --servedir=dist/ --bundle",
    "test": "jest",
    "watch-test": "jest --watch",
    "watch-tsc": "tsc --watch --pretty --preserveWatchOutput",
    "start": "concurrently -c red,yellow,cyan,magenta npm:dev npm:watch-tsc npm:watch-test"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "events": "^3.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "concurrently": "^6.1.0",
    "esbuild": "^0.11.20",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
